<div class="container-divider"></div>
<div class="error-page">
  <h1 class="error-page-heading">ðŸ™ˆ
    <span class="error-page-status-code">{{t 'oops'}}...</span>
    <span class="error-page-status-code">{{status_code}}_{{error}}</span>
  </h1>

  {{#is error 'unauthorized'}}
  <h2>{{link 'sign_in'}}</h2>
  <img src="{{asset 'error-403-locked.svg'}}" />
  {{/is}}

  {{#is error 'forbidden'}}
  <h2>{{t 'not_authorized'}}</h2>
  <img src="{{asset 'error-500-mistake.svg'}}" />
  {{/is}}

  {{#is error 'not_found'}}
  <h2>{{t 'nonexistent_page'}}</h2>
  <img src="{{asset 'error-404-missing.svg'}}" />
  <p>{{t 'mistyped_address_or_moved_page'}}</p>
  {{/is}}

  {{#link 'help_center'}}
  {{t 'back_to_homepage'}}
  {{/link}}


</div>
