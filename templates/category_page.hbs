<div class="container category-page">
  <nav class="sub-nav">
    {{breadcrumbs}}
  </nav>
  <div class="category-container">
    <div class="category-content">
      <header class="page-header">
        <h1>{{category.name}}</h1>
      </header>
      <div class="section-tree" id="main-content">{{#each sections}}
          <section class="section">
            <h2 class="section-tree-title"><a href="{{url}}">{{name}}</a></h2>{{#if articles}}
              <ul class="article-list">{{#each articles}}
                  <li class="article-list-item{{#if promoted}} promoted{{/if}}{{#if internal}} internal{{/if}}">
                    {{#if promoted}}<i class="material-icons">flag</i>{{/if}}
                    <a class="article-list-link" href="{{url}}">{{title}}</a>
                    {{#if internal}}<i class="material-icons">lock</i>{{/if}}
                  </li>
                {{/each}}</ul>{{#if more_articles}}<a class="see-all-articles" href="{{url}}">{{t 'show_all_articles' count=article_count}}</a>{{/if}}
            {{/if}}
          </section>
        {{else}}<i class="category-empty"><a href="{{category.url}}">{{t 'empty'}}</a></i>
        {{/each}}</div>
    </div>
  </div>
</div>

